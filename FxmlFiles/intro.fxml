<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Oblig3.Controllers.introController">
    <top>
        <Label fx:id="title" text="Sale Register" textAlignment="CENTER" BorderPane.alignment="CENTER">
            <font>
                <Font name="Book Antiqua Bold" size="34.0" />
            </font>
         <padding>
            <Insets bottom="15.0" top="10.0" />
         </padding>
        </Label>
    </top>
    <left>
        <VBox spacing="10.0">
           <children>
              <Button fx:id="homepage" text="Home page" />
              <Button fx:id="customers" text="Customers" />
              <Button fx:id="productCategory" onAction="#categoryClicked" text="Product categories" />
              <Button fx:id="invoice" text="Invoice" />
              <Button fx:id="products" text="Products" />
              <Button fx:id="invoiceItems" text="Invoice Items" />
               <Button fx:id="detailInvoice" text="Detailed Invoice Sample" />
          </children>
         <padding>
            <Insets left="15.0" right="5.0" top="5.0" />
         </padding></VBox>
    </left>
</BorderPane>
